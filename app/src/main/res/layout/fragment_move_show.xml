<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weiducinema.fragment.Move_show">

    <ImageView
        android:id="@+id/im_ding"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"

        android:src="@drawable/cinema_detail_icon_location_default_"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/text1"
        android:text="北京"
        android:textSize="16sp"
        android:layout_alignLeft="@id/im_ding"
        android:layout_marginLeft="56dp"
        android:layout_alignBottom="@id/im_ding"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SearchView
        android:id="@+id/cinema_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_weight="0.0"
        ></SearchView>
    <ScrollView
        android:layout_marginTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/rcf_cinema_flow"
                android:background="@drawable/pupol"
                android:layout_marginLeft="24dp"
                android:layout_width="312dp"
                android:layout_centerHorizontal="true"
                android:layout_height="300dp"></recycler.coverflow.RecyclerCoverFlow>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/remen"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/rcf_cinema_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="热门电影"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:src="@drawable/com_icon_next_default_"
                    android:layout_alignParentRight="true"
                    android:layout_width="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recy1"
                android:layout_below="@id/remen"
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/zhengzai"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/recy1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="正在热映"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:src="@drawable/com_icon_next_default_"
                    android:layout_alignParentRight="true"
                    android:layout_width="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recy2"
                android:layout_below="@id/remen"
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/jijiang"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/recy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="即将上映"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:src="@drawable/com_icon_next_default_"
                    android:layout_alignParentRight="true"
                    android:layout_width="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/recy3"
                android:layout_below="@id/remen"
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
