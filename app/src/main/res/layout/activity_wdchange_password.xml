<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weiducinema.activity.my.MyChangePasswordActivity">

    <RelativeLayout
        android:id="@+id/recy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/my_message_shape"
        >
        <TextView
            android:id="@+id/tv_older"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="当前密码:"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/user_older_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="18335***165"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_below="@+id/user_older_pwd"
            android:layout_marginTop="10dp"
            android:background="#333333"
           />
        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_older"
            android:textSize="14sp"
            android:text="重置密码为:"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/user_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_older_pwd"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:text="18335***165"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_below="@+id/user_new_pwd"
            android:layout_marginTop="10dp"
            android:background="#333333"
            />
        <TextView
            android:id="@+id/tv_agin_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_new"
            android:textSize="14sp"
            android:text="请再次输入密码:"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/user_agin_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_new_pwd"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="18335***165"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/com_icon_my_default_"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:background="@drawable/btn_gradient"
        android:layout_below="@+id/recy1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"

        />
</RelativeLayout>
