<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pop_layout"
    android:background="#ffffff"
    android:layout_height="440dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="440dp">
        <LinearLayout
            android:id="@+id/aly"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sim"
                    android:layout_marginLeft="20dp"
                    app:placeholderImage="@drawable/baobei"
                    android:layout_width="111dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="149dp" />
                <TextView
                    android:id="@+id/lei"
                    android:text="类型:ansdjasasdadad"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/com_icon_down_default_"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/dao"
                    android:layout_below="@id/lei"
                    android:text="类型:ansdjasasdadad"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/chang"
                    android:layout_below="@id/dao"
                    android:text="类型:ansdjasasdadad"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/di"
                    android:layout_below="@id/chang"
                    android:text="类型:ansdjasasdadad"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/jie"
            android:text="剧情简介"
            android:textSize="16sp"
            android:layout_below="@id/aly"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view"
            android:layout_width="30dp"
            android:layout_below="@id/jie"
            android:background="#e8175e"
            android:layout_marginTop="6dp"
            android:layout_height="3dp"/>
        <TextView
            android:id="@+id/text5"
            android:layout_below="@id/view"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="三大杰克丹尼不卡不打击恐怖地阿杜和爱好的卡号的卡的很爱看打卡机绑定控件啊到八级考试的报刊上打卡打卡接收到就爱看的"
            android:layout_width="match_parent"
            android:maxLines="4"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yan"
            android:text="演职人员"
            android:textSize="16sp"

            android:layout_below="@id/text5"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view2"
            android:layout_width="30dp"
            android:layout_below="@id/yan"
            android:background="#e8175e"
            android:layout_marginTop="6dp"
            android:layout_height="3dp"/>
        <RelativeLayout
            android:id="@+id/lay"
            android:layout_below="@id/view2"
            android:layout_marginTop="10dp"
            android:layout_width="312dp"
            android:layout_height="wrap_content">
            <Button
                android:text="演员名字"
                android:textSize="12sp"
                android:padding="0dp"
                android:layout_width="75dp"
                android:layout_height="32dp" />
            <Button
                android:text="扮演角色"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:padding="0dp"
                android:layout_width="75dp"
                android:layout_height="32dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/lay"
            android:layout_marginTop="12dp"

            android:layout_width="312dp"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>