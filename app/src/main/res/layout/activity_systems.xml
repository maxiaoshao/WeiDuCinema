<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sys_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="系统消息"/>
    <TextView
        android:id="@+id/sysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_toRightOf="@id/sys_text"
        android:layout_marginLeft="5dp"
        android:text="（3条未读）"/>


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/sys_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@+id/sys_text"
        android:layout_marginTop="10dp">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/touming"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/sys_back"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/com_icon_my_default_"/>

    </RelativeLayout>

</RelativeLayout>
