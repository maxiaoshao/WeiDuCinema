<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/xiangqingmove"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/yi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
        <TextView
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/yi"
            android:layout_marginLeft="6dp"
            android:text="电影详情"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/com_icon_collection_default_"
            android:layout_width="24dp"
            android:id="@+id/guan"
            android:layout_height="24dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/movier_name"
        android:text="铁血战士"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/movier_sim"
        android:layout_width="259dp"
        android:layout_height="360dp"
        android:layout_below="@id/movier_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        app:placeholderImage="@drawable/baobei" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/movier_sim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:orientation="horizontal">

            <Button
                android:id="@+id/details_txt_details"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="详情"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/details_txt_prediction"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="预告"
                android:textColor="#ffffff" /> />

            <Button
                android:id="@+id/details_txt_stills"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="剧照"
                android:textColor="#ffffff" />/>

            <Button
                android:id="@+id/details_txt_review"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_tuo"
                android:text="影评"
                android:textColor="#ffffff"
                android:textSize="14sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/touming">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/com_icon_my_default_" />

        <Button
            android:id="@+id/goupiao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/buy_piao"
            android:text="购票" />
    </RelativeLayout>
</RelativeLayout>