<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <ImageView
        android:id="@+id/im_ding"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/cinema_detail_icon_location_default_"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <TextView
        android:id="@+id/text1"
        android:text="北京"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_alignLeft="@id/im_ding"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@id/im_ding"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/cinema_search"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/find_shape"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            ></SearchView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/im_ding"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            >
            <RadioGroup
                android:id="@+id/group"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/yi"
                    android:button="@null"
                    android:text="热门电影"
                    android:background="@drawable/radio"
                    android:padding="1dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_width="83dp"
                    android:layout_height="25dp" />
                <RadioButton
                    android:button="@null"
                    android:id="@+id/er"
                    android:text="正在热映"
                    android:gravity="center"
                    android:background="@drawable/radio"
                    android:padding="1dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="83dp"
                    android:layout_height="25dp" />
                <RadioButton
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/radio"
                    android:id="@+id/san"
                    android:text="即将上映"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="14sp"
                    android:layout_width="83dp"
                    android:layout_height="25dp" />
            </RadioGroup>

        </RelativeLayout>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xrecy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/touming"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/com_icon_my_default_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            />
    </RelativeLayout>

</RelativeLayout>
